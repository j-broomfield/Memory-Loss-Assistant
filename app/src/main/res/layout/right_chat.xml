<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="300dp"
    android:layout_alignParentEnd="true"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:padding="8dp"
            android:text="username"
            android:textAlignment="textEnd"
            android:textColor="@color/colorUsername"
            android:textSize="18sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/username_chat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:padding="8dp"
            android:text="You"
            android:textAlignment="textEnd"
            android:textColor="@color/colorUsername"
            android:textSize="18sp"
            tools:text="You" />

        <TextView
            android:id="@+id/message_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_chat3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/right_background"
            android:padding="8dp"
            android:text="Message Text"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Message Text" />



        ></RelativeLayout>
</RelativeLayout>